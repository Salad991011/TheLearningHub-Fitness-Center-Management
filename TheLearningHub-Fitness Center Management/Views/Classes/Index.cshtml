@model IEnumerable<TheLearningHub_Fitness_Center_Management.Models.Class>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Classname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classdesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagepath)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Classname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classtime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classdesc)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Imagepath))
                    {
                        <img src="@Url.Content("~/Images/" + item.Imagepath)" alt="Class Image" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    @if (item.ISAPPROVED)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else if (item.APPROVALSTATUS == "Pending")
                    {
                        <span class="text-warning">Pending</span>
                    }
                    else
                    {
                        <span class="text-danger">Rejected</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Classid" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Classid" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Classid" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
