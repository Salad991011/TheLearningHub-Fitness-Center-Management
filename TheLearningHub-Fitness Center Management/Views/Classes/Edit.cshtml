@model TheLearningHub_Fitness_Center_Management.Models.Class

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Classid" />

            <div class="form-group">
                <label asp-for="Classname" class="control-label"></label>
                <input asp-for="Classname" class="form-control" />
                <span asp-validation-for="Classname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Classtime" class="control-label"></label>
                <input asp-for="Classtime" type="datetime-local" class="form-control" />
                <span asp-validation-for="Classtime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Classdate" class="control-label"></label>
                <input asp-for="Classdate" type="date" class="form-control" />
                <span asp-validation-for="Classdate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Classdesc" class="control-label"></label>
                <textarea asp-for="Classdesc" class="form-control"></textarea>
                <span asp-validation-for="Classdesc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClassImageFile" class="control-label"></label>
                <input asp-for="ClassImageFile" type="file" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.Imagepath))
                {
                    <p>Current Image:</p>
                    <img src="@Url.Content("~/Images/" + Model.Imagepath)" alt="Class Image" width="150" height="150" />
                }
                <span asp-validation-for="ClassImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
