@{
    Layout = "~/Views/Shared/HomeLayout.cshtml";
    ViewData["Title"] = "Login";
}

<head>
    <title>Account Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/css/main.css">
    <style>
        .custom-icon {
            color: #e91e63; /* Same color as Signup Page Icons */
        }
    </style>
</head>

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('/LoginAndRegisterDesign/images/bg-01.jpg');">
            <div class="card shadow-lg" style="width: 400px; margin: auto; margin-top: 100px; padding: 20px; border-radius: 15px; background-color: rgba(255, 255, 255, 0.85);">
                <h2 class="text-center mb-4" style="font-weight: bold;">Account Login</h2>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <form class="login-form" method="post" asp-action="Login" asp-controller="Auth">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div class="mb-3">
                        <label for="username" class="form-label">Email/Username</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-user custom-icon"></i></span>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter your email or username" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-lock custom-icon"></i></span>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary w-100" style="background-color: #e91e63; border: none; padding: 10px 0; border-radius: 25px;">
                            Login
                        </button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p class="text-muted">Don't have an account? <a href="/Auth/Register" style="color: #e91e63;">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/LoginAndRegisterDesign/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/LoginAndRegisterDesign/vendor/bootstrap/js/bootstrap.min.js"></script>
</body>
