@{
    Layout = "~/Views/Shared/HomeLayout.cshtml";
    ViewData["Title"] = "Register";
}

<head>
    <title>Sign Up</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/LoginAndRegisterDesign/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/LoginAndRegisterDesign/css/main.css">
    <style>
        .custom-container {
            max-width: 750px;
            margin: 50px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        }

        .input-group-text {
            background-color: #f8f9fa;
            border: none;
        }

            .input-group-text i {
                color: #e91e63;
            }

        .btn-signup {
            background-color: #e91e63;
            border: none;
        }

            .btn-signup:hover {
                background-color: #d81b60;
            }

        .form-label {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('/LoginAndRegisterDesign/images/bg-01.jpg');">
            <div class="custom-container">
                <h2 class="text-center mb-4">Account Sign Up</h2>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <form method="post" asp-action="Register" asp-controller="Auth" enctype="multipart/form-data">
                    <!-- First Name -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input class="form-control" type="text" name="fname" placeholder="First Name" required>
                    </div>

                    <!-- Last Name -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                        <input class="form-control" type="text" name="lname" placeholder="Last Name" required>
                    </div>

                    <!-- Email -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input class="form-control" type="email" name="email" placeholder="Email" required>
                    </div>

                    <!-- Phone Number -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        <input class="form-control" type="text" name="phoneNumber" placeholder="Phone Number" required>
                    </div>

                    <!-- Password -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input class="form-control" type="password" name="password" placeholder="Password" required>
                    </div>

                    <!-- Confirm Password -->
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input class="form-control" type="password" name="confirm_password" placeholder="Confirm Password" required>
                    </div>

                    <!-- Profile Picture -->
                    <div class="mb-4">
                        <label class="form-label">Upload Profile Picture</label>
                        <input class="form-control" type="file" name="profileImage" accept="image/*">
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button class="btn btn-signup btn-block text-white" type="submit">
                            <i class="fas fa-user-plus"></i> Sign Up
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/LoginAndRegisterDesign/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/LoginAndRegisterDesign/vendor/bootstrap/js/popper.js"></script>
    <script src="~/LoginAndRegisterDesign/vendor/bootstrap/js/bootstrap.min.js"></script>
</body>
