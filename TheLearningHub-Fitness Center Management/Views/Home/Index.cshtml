@{
    Layout = "~/Views/Shared/HomeLayout.cshtml";
    ViewData["Title"] = "Index";
    @model IEnumerable<TheLearningHub_Fitness_Center_Management.Models.Paidplan>
    var BackgroundImagePath1 = ViewBag.BackgroundImagePath1;
    var BackgroundImagePath2 = ViewBag.BackgroundImagePath2;
    var BACKGROUND_TITLE1 = ViewBag.BACKGROUND_TITLE1;
    var BACKGROUND_DESC1 = ViewBag.BACKGROUND_DESC1;
    var COURSEL_TEXT_TITLE = ViewBag.COURSEL_TEXT_TITLE;
    var COURSEL_DESC = ViewBag.COURSEL_DESC;
    var BACKGROUND_TITLE2 = ViewBag.BACKGROUND_TITLE2;
    var BACKGROUND_DESC2 = ViewBag.BACKGROUND_DESC2;
    var TRAINER_TITLE = ViewBag.TRAINER_TITLE;
    var TRAINER_DESC = ViewBag.TRAINER_DESC;
    var SERVICES_TITLE = ViewBag.SERVICES_TITLE;
    var SERVICES_DESC1 = ViewBag.SERVICES_DESC1;
}

<div id="homeSection"
     style="background-image: url('@Url.Content("~/Images/" + (string.IsNullOrEmpty(BackgroundImagePath1) ? "default.jpg" : BackgroundImagePath1))');
            background-size: cover;
            background-position: center;
            height: 400px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                <h1 class="mb-3" style="color: #fff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);">@BACKGROUND_TITLE1</h1>
                <p class="lead mx-auto desc mb-5" style="color: #ddd;">@BACKGROUND_DESC1</p>
                <p class="text-center">
                    <a href="~/HomeDesign/#" class="btn btn-outline-white py-3 px-5" style="color: #fff; border: 2px solid #fff;">Get Started</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="site-section" style="background-color: #1c1c1c; color: #fff;">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-8 section-heading">
                <span class="subheading" style="color: #ff4081;">Stay Healthy</span>
                <h2 class="heading mb-3">@COURSEL_TEXT_TITLE</h2>
                <p>@COURSEL_DESC</p>
            </div>
        </div>
        <div class="row">
            @foreach (var plan in Model)
            {
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="slide" style="width: 90%; max-width: 350px; margin: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); overflow: hidden; background-color: #fff;">
                        <div class="ftco-feature-1" style="padding: 20px;">
                            <img src="@Url.Content($"~/Images/{plan.ImagePath}")" alt="Plan Image"
                                 style="width: 100%; height: 200px; object-fit: cover; border-radius: 5px;">
                            <div class="ftco-feature-1-text" style="margin-top: 15px;">
                                <h3 style="font-weight: bold; font-size: 1.5rem; color: #333;">@plan.PlanTitle</h3>
                                <p style="font-size: 1rem; color: #666; margin-bottom: 10px;">@plan.PlanDesc</p>
                                <p style="font-size: 0.9rem; color: #888; font-style: italic;">
                                    Trainer: @(plan.Trainer != null ? $"{plan.Trainer.Fname} {plan.Trainer.Lname}" : "Not Assigned")
                                </p>
                                <p style="font-size: 1.2rem; font-weight: bold; color: #ff4081; margin-bottom: 10px;">
                                    Price: $@plan.PlanPrice
                                </p>
                                <button class="btn btn-primary"
                                        style="background-color: #ff4081; border: none; padding: 10px 20px; font-size: 1rem; border-radius: 5px; color: white; cursor: pointer; margin-top: 10px;">
                                    Subscribe
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="bgimg"
     style="background-image: url('@Url.Content("~/Images/" + (string.IsNullOrEmpty(BackgroundImagePath2) ? "default.jpg" : BackgroundImagePath2))');
            background-size: cover;
            background-position: center;
            height: 400px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-7">
                <h2 style="color: #fff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);">@BACKGROUND_TITLE2</h2>
                <p style="color: #ddd;">@BACKGROUND_DESC2</p>
            </div>
        </div>
    </div>
</div>

<div class="site-section" id="trainer-section" style="background-color: #2b2b2b; color: #fff;">
    <div class="container">
        <div class="row justify-content-center text-center mb-5" data-aos="fade-up">
            <div class="col-md-8 section-heading">
                <span class="subheading" style="color: #ff4081;">Trainer</span>
                <h2 class="heading mb-3">@TRAINER_TITLE</h2>
                <p>@TRAINER_DESC</p>
            </div>
        </div>
        <div class="row">
            @if (ViewBag.Trainers != null && ((List<TheLearningHub_Fitness_Center_Management.Models.User>)ViewBag.Trainers).Count > 0)
            {
                @foreach (var trainer in ViewBag.Trainers as List<TheLearningHub_Fitness_Center_Management.Models.User>)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4 text-center">
                        <div class="person shadow-sm p-3 rounded" style="background-color: #fff;">
                            <img src="@Url.Content($"~/Images/{trainer.ImagePath ?? "default-user.jpg"}")" alt="Trainer Image"
                                 class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                            <h3 class="h5 font-weight-bold" style="color: #333;">@trainer.Fname @trainer.Lname</h3>
                            <p class="text-muted">Trainer</p>
                            <p class="text-secondary" style="font-size: 0.9rem; color: #888;">
                                @(string.IsNullOrWhiteSpace(trainer.Email) ? "No bio available." : $"Reach me at {trainer.Email}")
                            </p>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>No trainers available at the moment.</p>
                </div>
            }
        </div>
    </div>
</div>

<div class="site-section" id="contact-section" style="background-color: #1c1c1c; color: #fff;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <form method="post" action="/Home/SubmitFeedback" data-aos="fade">
                    <div class="form-group row">
                        <div class="col-md-6 mb-3 mb-lg-0">
                            <input type="text" name="Fname" class="form-control" placeholder="First name" required>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="Lname" class="form-control" placeholder="Last name" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="text" name="Subj" class="form-control" placeholder="Subject" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <input type="email" name="Email" class="form-control" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea name="Msg" class="form-control" cols="30" rows="10" placeholder="Write your message here." required></textarea>
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-md-6 text-center">
                            <input type="submit" class="btn btn-primary py-3 px-5 btn-block" value="Send Message" style="background-color: #ff4081; border: none;">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

