@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "AdminDashboard";
}

<div class="container-fluid">
    <!-- Feedback Messages -->
    <div class="row">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <!-- Key Metrics Section -->
    <div class="row text-center mb-4">
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h6 class="text-uppercase">Active Members</h6>
                    <h3 class="font-weight-bold">@ViewBag.ActiveMembers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6 class="text-uppercase">Total Sales</h6>
                    <h3 class="font-weight-bold">$@ViewBag.TotalSales</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h6 class="text-uppercase">Active Membership Plans</h6>
                    <h3 class="font-weight-bold">@ViewBag.ActiveMemberships</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Registered Trainers Section -->
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Registered Trainers</h4>
                    <form method="get" action="/Admin/Trainers" class="mb-3">
                        <div class="input-group">
                            <input type="text" name="trainerQuery" class="form-control" placeholder="Search trainers">
                            <button class="btn btn-primary" type="submit">Search</button>
                        </div>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Trainers != null)
                                {
                                    foreach (var trainer in ViewBag.Trainers)
                                    {
                                        <tr>
                                            <td>@trainer.Fname</td>
                                            <td>@trainer.Lname</td>
                                            <td>@trainer.Email</td>
                                            <td>@trainer.PhoneNumber</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No trainers found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Manage Classes Section -->
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Manage Classes</h4>
                    <p class="text-muted">Pending Class Requests</p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Class Name</th>
                                    <th>Description</th>
                                    <th>Requested By</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.PendingClasses != null && ViewBag.PendingClasses.Count > 0)
                                {
                                    foreach (var pendingClass in ViewBag.PendingClasses)
                                    {
                                        <tr>
                                            <td>@pendingClass.Classname</td>
                                            <td>@pendingClass.Classdesc</td>
                                            <td>@pendingClass.User.Fname @pendingClass.User.Lname</td>
                                            <td>
                                                <form method="post" action="/Admin/ApproveClass">
                                                    <input type="hidden" name="Classid" value="@pendingClass.Classid" />
                                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                                    <button type="submit" formaction="/Admin/RejectClass" class="btn btn-danger btn-sm">Reject</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">No pending classes available.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Classes Requests Summary Section -->
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Classes Requests Summary</h4>
                    <p class="text-muted">Approved or Rejected Requests</p>
                    <form method="post" action="/Admin/ClearHistory" class="mb-3">
                        <button type="submit" class="btn btn-danger">Clear History</button>
                    </form>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Class Name</th>
                                    <th>Description</th>
                                    <th>Requested By</th>
                                    <th>Status</th>
                                    <th>Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.ClassRequests != null && ViewBag.ClassRequests.Count > 0)
                                {
                                    foreach (var classRequest in ViewBag.ClassRequests)
                                    {
                                        <tr>
                                            <td>@classRequest.Classname</td>
                                            <td>@classRequest.Classdesc</td>
                                            <td>@classRequest.User.Fname @classRequest.User.Lname</td>
                                            <td>@classRequest.APPROVALSTATUS</td>
                                            <td>Email sent successfully</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No approved/rejected classes available.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">User Feedback</h4>
            <p class="text-muted">Feedback submitted by users</p>
            <form method="post" action="/Admin/DeleteSelectedFeedback">
                <div class="mb-3">
                    <button type="submit" class="btn btn-danger">Delete Selected</button>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                                    @if (ViewBag.Feedbacks != null && ((List<Contactu>)ViewBag.Feedbacks).Count > 0)
                                    {
                                        foreach (var feedback in ViewBag.Feedbacks)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" name="selectedFeedbackIds" value="@feedback.ContactId">
                                                </td>
                                                <td>@feedback.Fname</td>
                                                <td>@feedback.Lname</td>
                                                <td>@feedback.Email</td>
                                                <td>@feedback.Subj</td>
                                                <td>@feedback.Msg</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">No feedback available.</td>
                                    </tr>
                                    }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

    </div>

    <script>
        // Automatically dismiss alerts after 5 seconds
        setTimeout(() => {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                alert.classList.add('hidden');
                setTimeout(() => alert.remove(), 500); // Remove after fade out
            });
        }, 5000);
    </script>
</div>
