@model IEnumerable<TheLearningHub_Fitness_Center_Management.Models.SchedulePageContent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BackgroundTitle1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BackgroundDesc1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BackgroundImagePath1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduleDesc)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BackgroundTitle1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BackgroundDesc1)
                    </td>
                    <td>
                        <img src="@Url.Content("~/Images/" + item.BackgroundImagePath1)" asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduleDesc)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SchedulePageId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.SchedulePageId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.SchedulePageId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
