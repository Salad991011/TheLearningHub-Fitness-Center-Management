@model IEnumerable<TheLearningHub_Fitness_Center_Management.Models.User>

@{
    ViewData["Title"] = "Trainer Dashboard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Trainer Dashboard</h1>
<hr />

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Membership Name</th>
                <th>Membership Start</th>
                <th>Membership End</th>
                <th>Trainer Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.AssignedUsers as List<TheLearningHub_Fitness_Center_Management.Models.User>)
            {
                var membership = user.Subscriptions.FirstOrDefault(); // Assuming one subscription per user
                var trainer = user.Routines.FirstOrDefault()?.Trainer;
                <tr>
                    <td>@user.Fname @user.Lname</td>
                    <td>@user.Email</td>
                    <td>@membership?.Plan?.PlanTitle ?? "N/A"</td>
                    <td>@membership?.DateFrom?.ToShortDateString() ?? "N/A"</td>
                    <td>@membership?.DateTo?.ToShortDateString() ?? "N/A"</td>
                    <td>@trainer?.Fname @trainer?.Lname</td>
                    <td>
                        <a asp-action="EditWeeklySchedule" asp-route-userId="@user.UserId" class="btn btn-primary">Edit Weekly Schedule</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
