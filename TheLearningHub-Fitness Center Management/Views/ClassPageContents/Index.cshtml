@model IEnumerable<TheLearningHub_Fitness_Center_Management.Models.ClassPageContent>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Horizontal Scrollable Table -->
<div style="overflow-x: auto; white-space: nowrap;">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.BackgroundTitle1)</th>
                <th>@Html.DisplayNameFor(model => model.BackgroundDesc1)</th>
                <th>@Html.DisplayNameFor(model => model.BackgroundImagePath1)</th>
                <th>@Html.DisplayNameFor(model => model.ClassesTitle)</th>
                <th>@Html.DisplayNameFor(model => model.ClassesDesc)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BackgroundTitle1)</td>
                    <td>@Html.DisplayFor(modelItem => item.BackgroundDesc1)</td>
                    <td>
                        <img src="@Url.Content("~/Images/" + item.BackgroundImagePath1)" asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.ClassesTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.ClassesDesc)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ClassPageId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ClassPageId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ClassPageId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
