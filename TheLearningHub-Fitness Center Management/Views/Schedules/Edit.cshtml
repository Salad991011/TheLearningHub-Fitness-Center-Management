@model TheLearningHub_Fitness_Center_Management.Models.Schedule

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Edit Schedule</h1>

<h4>Schedule Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ScheduleId" />

            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" type="date" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" type="time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ScheduleImageFile" class="control-label">Upload Image</label>
                <input asp-for="ScheduleImageFile" type="file" class="form-control" />
                <span asp-validation-for="ScheduleImageFile" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="form-group">
                    <label>Current Image</label>
                    <div>
                        <img src="~/Images/@Model.ImagePath" alt="Schedule Image" class="img-fluid" style="max-width: 200px;" />
                    </div>
                </div>
            }

            <div class="form-group">
                <label asp-for="PlanId" class="control-label"></label>
                <select asp-for="PlanId" class="form-control" asp-items="ViewBag.PlanId"></select>
                <span asp-validation-for="PlanId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoutineId" class="control-label"></label>
                <select asp-for="RoutineId" class="form-control" asp-items="ViewBag.RoutineId"></select>
                <span asp-validation-for="RoutineId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClassId" class="control-label"></label>
                <select asp-for="ClassId" class="form-control" asp-items="ViewBag.ClassId"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
