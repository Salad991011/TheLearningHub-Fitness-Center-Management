@model TheLearningHub_Fitness_Center_Management.Models.Schedule

@{
    ViewData["Title"] = "Schedule Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Schedule Details</h1>

<div class="card text-white bg-dark">
    <div class="card-body">
        <p><strong>Date:</strong> @Model.Day?.ToString("yyyy-MM-dd")</p>
        <p><strong>Time:</strong> @Model.Time?.ToString("hh:mm tt")</p>
        <p><strong>Image:</strong></p>
        <p><strong>Image:</strong></p>
        <div>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="/Images/@Model.ImagePath" alt="Schedule Image" style="max-width: 200px; object-fit: cover;" />
            }
            else
            {
                <span>No Image</span>
            }
        </div>

        <p><strong>Plan:</strong> @Model.Plan?.PlanTitle ?? "N/A"</p>
        <p><strong>Routine:</strong> @Model.Routine?.Desc ?? "N/A"</p>
        <p><strong>Class:</strong> @Model.Class?.Classname ?? "N/A"</p>
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ScheduleId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
