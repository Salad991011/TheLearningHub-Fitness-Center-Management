@model TheLearningHub_Fitness_Center_Management.Models.Schedule

@{
    ViewData["Title"] = "Delete Schedule";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="mb-4">Delete Schedule</h1>

<div class="card shadow-sm p-4">
    <h4 class="text-danger">Are you sure you want to delete this schedule?</h4>
    <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Day?.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Time</dt>
        <dd class="col-sm-9">@Model.Time?.ToString("hh:mm tt")</dd>

        <dt class="col-sm-3">Plan</dt>
        <dd class="col-sm-9">@Model.Plan?.PlanTitle</dd>

        <dt class="col-sm-3">Routine</dt>
        <dd class="col-sm-9">@Model.Routine?.Desc</dd>

        <dt class="col-sm-3">Class</dt>
        <dd class="col-sm-9">@Model.Class?.Classname</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ScheduleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
